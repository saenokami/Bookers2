<div class="container">
  <div class="row">
    
    <%= render 'users/user_info', user: current_user, book: @new_book %>

    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        
        <tbody>
          <tr>
            <td>
              <% if @book.user.profile_image.attached? %>
                <%= image_tag @book.user.profile_image.variant(resize: "100x100"), class: "avatar mr-3" %>
              <% else %>
                <%= image_tag 'no_image.jpg' %>
              <% end %>
              <br>
              <%= link_to @book.user.name, user_path(@book.user) %>
            </td>
            <td>
              <%= @book.title %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td>
              <% if @book.user == current_user %>
              <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-success mr-2" %>
              <% end %>
            </td>
            <td>
             <% if @book.user == current_user %>
             <%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか?' }, class: "btn btn-danger" %>
             <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

