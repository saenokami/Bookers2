<div class="container">
  
  
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="mb-4">Editing Book</h1>
      
      <% if @book.errors.any? %>
        <%= @book.errors.count %>errors occurred.
       <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
       </ul>
      <% end %>


      <%= form_with model: @book, local: true, html: { class: 'needs-validation', novalidate: '' } do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, id: "book_title", class: "form-control", required: true %>
        </div>
        <div class="form-group">
          <label for="book_body">Opinion</label>
          <%= f.text_area :body, id: "book_body", class: "form-control", required: true %>
        </div>
        <%= f.submit 'Update Book', class: 'btn btn-success btn-block' %>
      <% end %>

      <div class="mt-4">
        <%= link_to 'Show', book_path(@book) %> |
        <%= link_to 'Back', books_path %>
      </div>
    </div>
  </div>
</div>
