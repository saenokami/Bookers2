<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="mb-4">User info</h1>
      
      <% if @user.errors.any? %>
      <%= @user.errors.count %>errors occurred.
      <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
       <% end %>
      </ul>
      <% end %>
      
      
      
      
      <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name, id: "user_name", class: "form-control" %>
        </div>
        
        <div class>
          <label for="user_profile_image">Image</label>
          <p></p>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <p></p>
        
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction, id: "user_introduction", class: "form-control" %>
        </div>
        
        <%= f.submit 'Update User', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
