
 
 
<div class="col-md-3">
  <h2>User info</h2>
  <div id="user-info">
    <% if user.profile_image.attached? %>
      <%= image_tag user.profile_image.variant(resize: "80x80"), class: "avatar img-fluid rounded-circle" %>
    <% else %>
      <%= image_tag 'no_image.jpg', class: "img-fluid rounded-circle" %>
    <% end %>
    <table class="table">
      <tbody>
        <tr>
          <th>Name</th>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <th>Introduction</th>
          <td><%= user.introduction %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to(edit_user_path(user), class: "btn btn-primary btn-block mb-3") do %>
      <i class="fa-solid fa-user-gear mr-2"></i> 
    <% end %>
  </div>

  <h2 class="mt-5">New book</h2>
  <%= form_with model: book, class: "mb-5" do |f| %>
    <h5>Title</h5>
    <%= f.text_field :title, class: "form-control mb-2" %>
    <h5>Opinion</h5>
    <%= f.text_area :body, class: "form-control mb-2" %>
    <%= f.submit 'Create Book', class: 'btn btn-success btn-block' %>
  <% end %>
</div>


